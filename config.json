{
    "layer": "l4",
    "algorithm": "url_hash",
    "listen": {
        "port":8080,
        "address": "0.0.0.0"
    },
    "l4_settings": {
        "tcp":{
            "keepalive": true,
            "keepalive_time": 900,
            "max_connections": 5
        }
    },
    "l7_settings": {
        "http": {
            "max_header_size": 32768,
            "idle_timeout": 60,
            "enable_https": true,
            "ssl_cert_path": "/etc/certs/server.crt",
            "ssl_key_path": "/etc/certs/server.key"
        },
        "sticky": {
            "enabled": true,
            "hash_method": "url"
        }
    },
    "healthcheck": {
        "enabled": true,
        "protocol": "http",
        "interval":  100,
        "timeout": 180,
        "path": "/health",
        "port": 9000,
        "expected_status": "running"
    },
    "metrics": {
        "enabled": false,
        "port": 9999
    }
}